<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.twogeeks.bitmapstorage" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pl.twogeeks.bitmapstorage.sample.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.twogeeks.bitmapstorage.sample.BitmapLoaderActivity"
            android:label="@string/title_activity_bitmap_loader"
            android:parentActivityName=".sample.MainActivity">
        </activity>
        <activity
            android:name="pl.twogeeks.bitmapstorage.sample.GridActivity"
            android:label="@string/title_activity_grid"
            android:parentActivityName=".sample.MainActivity">
        </activity>
        <activity
            android:name=".sample.LinearLayoutActivity"
            android:label="@string/title_activity_linear_layout"
            android:parentActivityName=".sample.MainActivity">
        </activity>
    </application>

</manifest>
